<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.5">

    <TextView
        android:id="@+id/textview_recyclerview_id"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="8dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@id/textview_recyclerview_korean"
        app:layout_constraintEnd_toEndOf="@id/textViewlayout"
        app:layout_constraintHorizontal_weight="0"
        app:layout_constraintRight_toRightOf="@id/textViewlayout"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@id/textViewlayout" />


    <TextView
        android:id="@+id/textview_recyclerview_korean"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:autoLink="all"
        android:text=""
        android:textColorLink="#242424"
        app:layout_constraintBottom_toTopOf="@id/textview_recyclerview_english"
        app:layout_constraintEnd_toEndOf="@id/textViewlayout"
        app:layout_constraintHorizontal_weight="0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@id/textview_recyclerview_id" />

    <TextView
        android:id="@+id/textview_recyclerview_english"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:autoLink="all"
        android:maxLines="1"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@id/textViewlayout"
        app:layout_constraintEnd_toEndOf="@id/textViewlayout"
        app:layout_constraintHorizontal_weight="0"
        app:layout_constraintStart_toStartOf="@id/textViewlayout"
        app:layout_constraintTop_toBottomOf="@+id/textview_recyclerview_korean" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView"
        android:layout_width="59dp"
        android:layout_height="51dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/background_color"
        app:layout_constraintBottom_toTopOf="@id/textview_recyclerview_english"
        app:layout_constraintRight_toLeftOf="@id/textview_recyclerview_korean"
        app:layout_constraintStart_toStartOf="@id/textViewlayout"
        app:layout_constraintTop_toTopOf="@id/textViewlayout"
        app:layout_constraintVertical_bias="1.0"
        tools:srcCompat="@drawable/anonymous2" />

    <TextView
        android:id="@+id/textViewlayout"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/background_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>